@model IEnumerable<ASC.Dominio.AlunoModel>
@{
    ViewBag.Title = "Index";
}

<h2>Alunos</h2>

<p>
    @Html.ActionLink("Incluir Novo Aluno", "AdicionaAluno", "Aluno", new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Matricula)</th>
        <th>@Html.DisplayNameFor(model => model.Nome)</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Matricula)</td>
            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Matricula }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.Matricula }) |
                @Html.ActionLink("Deletar", "Delete", new { id = item.Matricula })
            </td>
        </tr>
    }
</table>
