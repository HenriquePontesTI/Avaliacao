@model ASC.Dominio.TurmaModel
@{
    ViewBag.Title = "ExcluirTurma";
}

<h2>Excluir Turma</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>UsuarioModel</legend>

        <div class="editor-label">@Html.LabelFor(model => model.NumeroTurma)</div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NumeroTurma)
            @Html.ValidationMessageFor(model => model.NumeroTurma)
        </div>

        <div class="editor-label">@Html.LabelFor(model => model.NomeTurma)</div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NomeTurma)
            @Html.ValidationMessageFor(model => model.NomeTurma)
        </div>
        <p>
            <input type="submit" value="Delete" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Turmas", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

